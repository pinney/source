#include "mt7628an.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "widora,widora-neo-16m", "widora,widora-neo-32m", "mediatek,mt7628an-soc";
	model = "Widora-NEO";

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	gpio-leds {
		compatible = "gpio-leds";

		wifi {
			label = "widora:orange:wifi";
			gpios = <&wgpio 0 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		wps {
			label = "reset";
			gpios = <&gpio1 6 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	wgpio: gpio-wifi {
		compatible = "mediatek,gpio-wifi";
		#address-cells = <1>;
		#size-cells = <0>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&pinctrl {
	state_default: pinctrl0 {
		gpio {
			ralink,group = "i2s", "refclk", "perst", "wled_an", "wdt";
			ralink,function = "gpio";
		};
	};
};

&spi0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&spi_pins>, <&spi_cs1_pins>;

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		m25p,chunked-io = <31>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		partition@30000 {
			label = "u-boot-env";
			reg = <0x30000 0x10000>;
			read-only;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
			read-only;
		};

		firmware: partition@50000 {
			label = "firmware";
		};
	};
};

&i2c {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&pwm {
	status = "okay";
};

&ethernet {
	mtd-mac-address = <&factory 0x28>;
};

&sdhci {
	status = "okay";
	mediatek,cd-low;
};

&wmac {
	status = "okay";
};
